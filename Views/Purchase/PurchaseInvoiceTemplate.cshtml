@model PharmacyManagement.Models.PurchaseModel
@*@{
    Layout = "null";
}*@
<html>
<head>
    <title>Purchase Bill</title>
    @*Added because it gets opened in new windows and bootstrap wont get reference if not used this*@
    <link rel="stylesheet" href="http://localhost:50016/Content/bootstrap.min.css">
    <style>
        h2 {
            text-align-last: center;
        }

        .left {
            text-align: left;
        }

        .right {
            text-align: right;
        }
    </style>
</head>
<body>
    <h2>Purchase Invoice</h2>
    <div class="row">
        <div class="col-6 left">Invoice Number: @Model.PurchaseId</div>
        <div class="col-6 right">Invoice Date: @DateTime.Now</div>
    </div>
    <div class="row">
        <div class="col-6 left">Suplier Name: @Model.SupplierName</div>
        <div class="col-6 right">Batch Number: @Model.BatchNumber</div>
    </div>
    <div class="row">
        <div class="col-6 left">Payment Type: @Model.PaymentType</div>
        <div class="col-6 right">Purchased Date: @Model.PurchasedDate</div>
    </div>
    <table class="table table-striped table-hover mt-2">
        <thead>
            <tr>
                <th scope="col">Medicine Name</th>
                <th scope="col">Packing Type</th>
                <th scope="col">Expiry Date</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">TotalAmount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicine in Model.MedicinePurchasedModels)
            {
            <tr>
                <td>@medicine.MedicineName</td>
                <td>Bottle</td>
                <td>22</td>
                <td>1</td>
                <td>100</td>
                <td>100</td>
            </tr>
            }
            <tr>
                <td colspan="7">Grand Total:@Model.GrandTotal</td>
            </tr>
        </tbody>
    </table>
</body>
</html>


